
<div class="{%- if topColor -%}{{topColor}}{%- endif -%} {% if page.url !== '/' %}pb-32 lg:pb-64{% endif %}">
  <header class="relative max-w-screen-xl mx-auto h-24 p-5 md:flex md:justify-between md:items-center">
      <!-- logo -->
      <a href="/" title="back to homepage" class="logo">
        <svg class="dark:text-white transform scale-75" width="52" height="52" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 256 256" fill="none" xmlns="http://www.w3.org/2000/svg">
