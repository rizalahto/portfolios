<section id="talk" class="">
  <br>
    <div class="relative max-w-screen-xl mx-auto h-64 sm:flex sm:justify-between sm:items-center bg-gradient" style="padding:48px;">
      <div class="">
        <h3 class="font-bold text-4xl text-white">I am open to work now. â˜•</h3>
        <p class="block text-xl tracking-tight text-white" style="opacity:0.7; padding-top:5px;">
          Let's talk & get some coffee?
        </p>

      </div>

      <div>
        <a  
          href="{{ metadata.author.mailtolink }}"
          title="get in touch"
          target="_blank"
          rel="noreferrer"
          class="text-purple-800 bg-purple-100 transition-colors hover:text-purple-100 hover:bg-purple-800 dark:text-yellow-900 dark:bg-yellow-400 dark:hover:bg-yellow-200 dark:hover:text-yellow-900 font-bold tracking-tight text-lg py-3 px-5 rounded-full inline-flex items-center justify-center"
        >
        <svg class="inline-block w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Let's get in touch
        </a>
      </div>
    </div>
</section>



<br><br>

<!-- footer start -->
<footer id="footer" class="md:pt-6 md:pb-16 border-t border-gray-200 dark:border-gray-800">
  <div class="text-center md:text-left max-w-screen-xl m-auto sm:flex sm:justify-between sm:items-center text-sm pb-16 md:pb-0">
    <p id="credit" class="p-5 text-gray-500 dark:text-gray-400">{{ data.footerCreditLine1 }} {{ data.footerCreditLine2 }}
      {% for item, url in data.builtTools %}
        {%- if loop.first %} {% elif loop.last %} &{% else %},{% endif %}
        <a href="{{ url }}" class="text-black hover:text-purple-800 dark:text-gray-200 dark:hover:text-yellow-200" target="_blank" rel="noreferrer" title="follow me on social media" class="shadow md:transition-colors sm:hover:text-purple-800 md:hover:shadow-md">{{ item }}</a>
        {%- if loop.last -%}. {%- endif -%}
      {% endfor %}
    </p>

    <p class="p-5">
      <span class="inline-flex space-x-5 leading-tight">
        {% for item, url in metadata.socials %}
          <a href="{{ url }}" target="_blank" rel="noreferrer" class="font-bold text-black hover:text-purple-800 dark:text-gray-200 dark:hover:text-yellow-200" target="_blank" rel="noreferrer" title="follow me on social">{{ item }}.</a>
        {% endfor %}
      </span>
    </p>

    <!-- sticky footer for mobile -->
    <div id="sticky-footer"
      class="md:hidden text-base w-full px-5 flex justify-between items-center fixed bottom-0 bg-black md:relative dark:bg-purple-900">
      {% set navPages = collections.all | eleventyNavigation %}
        {%- for entry in navPages %}
          <a
          href="{{ entry.url | url }}"
          class="text-gray-300 py-4 dark:text-purple-300
          {% if entry.url == page.url %} text-white dark:text-white {% endif %}
          "
          >{{ entry.title }}</a>
      {%- endfor %}
        <a
          href="{{ metadata.author.mailtolink }}"
          title="get in touch"
          target="_blank"
          rel="noreferrer"
          class="text-gray-300 py-4 dark:text-purple-300"
        >Contact
        </a>
    </div>
  </div>
</footer>
<!-- footer end -->